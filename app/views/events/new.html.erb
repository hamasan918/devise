<% now = Time.zone.now %>

<div class="page-header">
  <h1>イベント作成</h1>
</div>
<% form_for(@event) do |f| %>
  <div><%= f.text_field :name %></div>
  <%= f.submit %>
<% end %>

<% form_for(@event, class: 'form-horizontal', role: 'form') do |form| %>
  <% if @event.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @event.errors.full_massages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :place %>
    <%= form.text_field :place, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :start_time %>
    <div>
      <%= form.datetime_select :start_time, start_year: now.year, end_year: now.year + 1 %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :end_time %>
    <div>
      <%= form.datetime_select :end_time, start_year: now.year, end_year: now.year + 1 %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: 'form-control', row:10 %>
  </div>

  <%= form.submit '作成', class: 'btn btn-default', date: {disable_with: '作成中・・・'} %>
<% end %>
