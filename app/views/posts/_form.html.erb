    <div class="post-menus">
      <%= link_to 'Show', @post %> |
      <%= link_to 'Back', posts_path %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit  value="保存" %>
  </div>
</div>
<% end %>

</div>
